        <Grid id="grd_rvopl" taborder="5" binddataset="ds_rvopl" useinputpanel="false" left="17" top="134" right="17" height="163" autofittype="none" onkeydown="grd_rvopl_onkeydown" oncelldblclick="btn_ok_onclick">
